---
interface Props {
    img : ImageMetadata,
    doctor: string,
    specialty:string
    description: string,
}

const {img, doctor, description, specialty} = Astro.props
---
<div class="flex-1 flex flex-col xl:flex-row items-center justify-center">
    <div class="flex flex-col items-center gap-8 xl:flex-row">
        <img class="flex-1" src={img.src} alt="">
        <div class="flex flex-col items-center">
            <h4 class="h4 mb-3">{doctor}</h4>
            <h5 class="font-semibold text-[#9ab4b7] tracking-[2.24px] uppercase mb-5">{specialty}</h5>
            <p class="font-light max-w-[320px] text-sm mb-5">{description}</p>   
            <div class="flex text-3xl gap-x-5 text-accent-tertiary">
                <a class="cursor-pointer hover:text-accent transition-all" href="#">
                    <i class="ri-youtube-fill"></i>
                </a>
                <a class="cursor-pointer hover:text-accent transition-all" href="#">
                    <i class="ri-instagram-fill"></i>
                </a>
                <a class="cursor-pointer hover:text-accent transition-all" href="#">
                    <i class="ri-facebook-circle-fill"></i>
                </a>
                <a class="cursor-pointer hover:text-accent transition-all" href="#">
                    <i class="ri-whatsapp-fill"></i>
                </a>
            </div>
        </div>                        
    </div>     
</div>